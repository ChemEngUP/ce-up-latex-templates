% redefine maketitle to use a default logo and make the text look prettier
\renewcommand{\maketitle}{
  \begingroup
  % Avoid duplicate page names:
  \renewcommand{\thepage}{Title 1}
  \begin{titlepage}
    \begin{center}%
      \null
      \vfill
      {\huge\textbf{\@title} \par}%
      \vskip 3em%
      \@author
    \end{center}\par
    \vfill
    \flushright{\@subject \par \today \par}
  \end{titlepage}
  \endgroup
}

\newcommand{\makecoverpage}{
  \begingroup
  % Avoid duplicate page names:
  \renewcommand{\thepage}{coverpage}
  \begin{titlepage}
    \newpage%
    \null\vfill%
    \begin{center}%
      \textbf{\LARGE \@title}%
      \vfill%
      \textbf{\large \@author}\\%
      \textbf{\large \@studentnumber}%
      \vskip 3em
      Department of Chemical Engineering\\
      University of Pretoria
    \end{center}
    \vfill
    \flushright{\@subject \par \today}\par
  \end{titlepage}
  \endgroup
}

